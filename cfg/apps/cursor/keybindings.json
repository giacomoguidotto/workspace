[
    // =================================================================================================
    // GLOBAL NAVIGATION & FOCUS
    // Strategy: Ctrl + H/J/K/L for movement between window parts (Editor, Sidebar, Panel)
    // =================================================================================================
    // Navigate between Editor, Sidebar, and Panel
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    // Toggle Panel
    {
        "key": "cmd+shift+j",
        "command": "workbench.action.focusPanel"
    },
    {
        "key": "cmd+shift+j",
        "command": "workbench.action.closePanel",
        "when": "panelFocus"
    },
    {
        "key": "cmd+j",
        "command": "-workbench.action.togglePanel"
    },
    // Toggle Sidebar (Using Cmd+Shift+L to match "Right" movement idea or specific binding)
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.focusSideBar"
    },
    {
        "key": "cmd+shift+l",
        "command": "workbench.action.closeSidebar",
        "when": "!auxiliaryBarFocus && !panelFocus && !editorFocus"
    },
    {
        "key": "cmd+0",
        "command": "-workbench.action.focusSideBar",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "cmd+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    // Focus Active Editor
    {
        "key": "cmd+shift+k",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    // =================================================================================================
    // EDITOR NAVIGATION & TABS
    // Strategy: Cmd + Shift + [ / ] (or H/L concept) for cycling content within the focused view
    // =================================================================================================
    // Cycle Tabs (Editors)
    {
        "key": "cmd+shift+[",
        "command": "workbench.action.previousEditor",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+]",
        "command": "workbench.action.nextEditor",
        "when": "editorTextFocus"
    },
    // Navigation History (Back/Forward)
    {
        "key": "cmd+[",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "cmd+]",
        "command": "workbench.action.navigateForward"
    },
    // =================================================================================================
    // PANEL & TERMINAL MANAGEMENT
    // Strategy: Reuse Tab cycling keys for Panel views; Standardize Terminal actions
    // =================================================================================================
    // Cycle Panel Views (Terminal -> Output -> Debug -> Problems)
    {
        "key": "cmd+shift+]",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "cmd+shift+[",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    // Clear Terminal (Cmd+K is standard for clearing)
    {
        "key": "cmd+k",
        "command": "workbench.action.terminal.clear",
        "when": "terminalFocus"
    },
    // Split Terminal
    {
        "key": "ctrl+d",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    // =================================================================================================
    // EDITING & CONTENT ACTIONS
    // Strategy: Cmd + Key for actions on the text/content
    // =================================================================================================
    // Basic Editing
    {
        "key": "cmd+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+/",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+backspace",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+z",
        "command": "git.revertSelectedRanges",
        "when": "editorTextFocus && !editorReadonly"
    },
    // Multi-Cursor (Vertical Cloning)
    {
        "key": "cmd+shift+\\",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+shift+'",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus && !editorReadonly"
    },
    // Add Selection to Next Match (Cmd+L replaces Cmd+D)
    {
        "key": "cmd+l",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "cmd+d",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    // Split Editor
    {
        "key": "ctrl+d",
        "command": "workbench.action.splitEditorRight",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+d",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus"
    },
    // =================================================================================================
    // SCROLLING & ZOOM
    // Strategy: Shift modifiers for fine-grained control or secondary actions
    // =================================================================================================
    // Scroll Viewport (keeping cursor static)
    {
        "key": "cmd+'",
        "command": "editorScroll",
        "args": {
            "to": "down"
        },
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+\\",
        "command": "editorScroll",
        "args": {
            "to": "up"
        },
        "when": "editorTextFocus"
    },
    // Scroll Explorer
    {
        "key": "shift+j",
        "command": "editorScroll",
        "args": {
            "to": "down"
        },
        "when": "explorerViewletFocus"
    },
    {
        "key": "shift+k",
        "command": "editorScroll",
        "args": {
            "to": "up"
        },
        "when": "explorerViewletFocus"
    },
    // Zoom (Cmd + Shift + +/-)
    {
        "key": "cmd+shift+-",
        "command": "editor.action.fontZoomOut",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+=",
        "command": "editor.action.fontZoomIn",
        "when": "editorTextFocus"
    },
    // =================================================================================================
    // LIST & WIDGET NAVIGATION
    // Strategy: Cmd + J/K for navigating lists (Suggestions, Quick Pick, etc.)
    // =================================================================================================
    // Suggest Widget
    {
        "key": "cmd+space",
        "command": "editor.action.triggerSuggest",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "escape",
        "command": "hideSuggestWidget",
        "when": "suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "cmd+space",
        "command": "-editor.action.inlineSuggest.trigger"
    },
    {
        "key": "cmd+j",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    {
        "key": "cmd+k",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    // Quick Pick / Quick Input
    {
        "key": "cmd+j",
        "command": "quickInput.next",
        "when": "inQuickInput && quickInputType == 'quickPick'"
    },
    {
        "key": "cmd+k",
        "command": "quickInput.previous",
        "when": "inQuickInput && quickInputType == 'quickPick'"
    },
    {
        "key": "ctrl+down",
        "command": "-quickInput.next",
        "when": "inQuickInput && quickInputType == 'quickPick'"
    },
    {
        "key": "ctrl+up",
        "command": "-quickInput.previous",
        "when": "inQuickInput && quickInputType == 'quickPick'"
    },
    {
        "key": "ctrl+j",
        "command": "-quickInput.next",
        "when": "inQuickInput && quickInputType == 'quickPick'"
    },
    {
        "key": "ctrl+k",
        "command": "-quickInput.previous",
        "when": "inQuickInput && quickInputType == 'quickPick'"
    },
    // Generic List Focus
    {
        "key": "cmd+j",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "cmd+k",
        "command": "list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    // Quick Fix / Code Action Widget
    {
        "key": "cmd+j",
        "command": "selectNextCodeAction",
        "when": "codeActionMenuVisible"
    },
    {
        "key": "cmd+k",
        "command": "selectPrevCodeAction",
        "when": "codeActionMenuVisible"
    },
    // Fallback/Legacy Support for Quick Fix
    {
        "key": "cmd+j",
        "command": "quickFixWidget.focusNext",
        "when": "quickFixWidgetVisible"
    },
    {
        "key": "cmd+k",
        "command": "quickFixWidget.focusPrevious",
        "when": "quickFixWidgetVisible"
    },
    // =================================================================================================
    // FILE EXPLORER
    // Strategy: Fast file creation and navigation
    // =================================================================================================
    {
        "key": "d",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "f",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "cmd+shift+c",
        "command": "copyRelativeFilePath",
        "when": "editorTextFocus"
    },
    // =================================================================================================
    // FILE SEARCH & SYMBOLS
    // Strategy: Cmd + T for files, Ctrl + O for symbols
    // =================================================================================================
    // Quick Open (Files)
    {
        "key": "cmd+t",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "cmd+p",
        "command": "-workbench.action.quickOpen"
    },
    // Open Recent
    {
        "key": "cmd+o",
        "command": "workbench.action.openRecent"
    },
    {
        "key": "cmd+o",
        "command": "-workbench.action.files.openFileFolder",
        "when": "isMacNative && openFolderWorkspaceSupport"
    },
    {
        "key": "shift+cmd+o",
        "command": "workbench.action.files.openFileFolder",
        "when": "isMacNative && openFolderWorkspaceSupport"
    },
    // Symbols
    {
        "key": "ctrl+o",
        "command": "workbench.action.showAllSymbols"
    },
    {
        "key": "cmd+t",
        "command": "-workbench.action.showAllSymbols"
    },
    // =================================================================================================
    // AI & AUTOMATION (CURSOR/GHOST TEXT)
    // Strategy: Cmd + H for generation, centered on home row
    // =================================================================================================
    // Inline Generate (Editor)
    {
        "key": "cmd+h",
        "command": "aipopup.action.modal.generate",
        "when": "editorFocus && !composerBarIsVisible"
    },
    {
        "key": "cmd+k",
        "command": "-aipopup.action.modal.generate",
        "when": "editorFocus && !composerBarIsVisible"
    },
    {
        "key": "cmd+shift+k",
        "command": "-aipopup.action.modal.generate",
        "when": "editorFocus && !composerBarIsVisible"
    },
    // AI in Terminal
    {
        "key": "cmd+h",
        "command": "cursorai.action.generateInTerminal",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported || terminalHasBeenCreated && terminalPromptBarVisible || terminalProcessSupported && terminalPromptBarVisible"
    },
    {
        "key": "cmd+k",
        "command": "-cursorai.action.generateInTerminal",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported || terminalHasBeenCreated && terminalPromptBarVisible || terminalProcessSupported && terminalPromptBarVisible"
    },
    // Chat & Composer Cleanups
    {
        "key": "shift+cmd+l",
        "command": "-composer.newAgentChat"
    },
    {
        "key": "cmd+l",
        "command": "-composer.sendToAgent",
        "when": "editorHasPromptBar && editorPromptBarFocused"
    },
    {
        "key": "cmd+l",
        "command": "-aichat.newchataction"
    },
    {
        "key": "shift+cmd+l",
        "command": "-aichat.insertselectionintochat"
    },
    {
        "key": "shift+cmd+h",
        "command": "aichat.newchataction"
    },
    // =================================================================================================
    // DEBUGGING
    // Strategy: Standard F-keys with modifiers or mnemonics
    // =================================================================================================
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.debug.restart",
        "when": "inDebugMode"
    },
    {
        "key": "shift+cmd+f5",
        "command": "-workbench.action.debug.restart",
        "when": "inDebugMode"
    },
    {
        "key": "ctrl+shift+c",
        "command": "workbench.action.debug.stop",
        "when": "inDebugMode && !focusedSessionIsAttach"
    },
    {
        "key": "shift+f5",
        "command": "-workbench.action.debug.stop",
        "when": "inDebugMode && !focusedSessionIsAttach"
    },
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.debug.start",
        "when": "debuggersAvailable && debugState == 'inactive'"
    },
    {
        "key": "f5",
        "command": "-workbench.action.debug.start",
        "when": "debuggersAvailable && debugState == 'inactive'"
    },
    // =================================================================================================
    // VERSION CONTROL (SCM)
    // =================================================================================================
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm"
    },
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active && !gitlens:disabled && config.gitlens.keymap == 'chorded'"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "workbench.scm.active && !gitlens:disabled && config.gitlens.keymap == 'chorded'"
    },
    // =================================================================================================
    // GO TO
    // =================================================================================================
    {
        "key": "cmd+;",
        "command": "editor.action.goToReferences"
        // "when": "editorHasReferenceProvider" // TODO: uncomment if cmd+; is used for something else
    }
]