// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "notification_panel": {
    "dock": "left",
  },
  "git_panel": {
    "dock": "right",
  },
  "project_panel": {
    "starts_open": false,
    "dock": "right",
  },
  "edit_predictions": {
    "enabled_in_text_threads": false,
    "mode": "subtle",
  },
  "agent": {
    "dock": "right",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest",
    },
  },

  "auto_update": false,
  "base_keymap": "Cursor",
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha (Blur)",
    "dark": "Catppuccin Mocha (Blur) [Heavy]",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha",
  },
  // "ui_font_family": "BlexMono Nerd Font Mono",
  "buffer_font_family": "BlexMono Nerd Font Mono",

  "terminal": {
    "font_family": "BlexMono Nerd Font Mono",
    "line_height": "standard",
  },

  "tab_size": 2,
  "ui_font_size": 14,
  "buffer_font_size": 14,

  "autosave": "on_focus_change",
  "format_on_save": "on",

  "code_actions_on_format": {
    "source.fixAll": true,
    "source.organizeImports": true,
  },

  "vim_mode": true,

  "wrap_guides": [80],
  "show_wrap_guides": true,
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length",
    },
    "Python": {
      "language_servers": ["ty", "!basedpyright"],
    },
    "JavaScript": {
      "language_servers": ["!eslint", "..."],
    },
    "TypeScript": {
      "language_servers": ["!eslint", "..."],
    },
  },
  "lsp": {
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"],
        },
      },
    },
  },

  "telemetry": { "metrics": false },
}
